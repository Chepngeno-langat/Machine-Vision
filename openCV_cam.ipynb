    "import cv2\n",
    "from picamera2 import Picamera\n",
    "\n",
    "piCam = Picamera2()\n",
    "\n",
    "while True:\n",
    "    frame = piCam.capture_array()\n",
    "    cv2.imshow('piCam', frame)\n",
    "    if cv2.waitKey(1) == ord('q'):\n",
    "        break\n",
    "        \n",
    "cv2.destroyAllWindows()"
   ]
